%a
  %img.logo{:src => "/assets/logo-inverted.png"}       

  = simple_form_for resource, as: resource_name, url: password_path(resource_name), method: :post do |f|
    .input-group
      %span.input-group-addon
        %i.icon-envelope  
      = f.input :email, autofocus: true, required: true, label: false
    = f.button :submit, I18n.t('auth.forgot.submit'), class: 'btn btn-lg btn-primary btn-block'

  = render "users/shared/links"
